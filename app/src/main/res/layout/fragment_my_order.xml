<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.MyOrderFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/myOrder_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Order"
            android:textSize="16sp"
            android:letterSpacing="-0.02"
            android:textColor="#001833"
            android:fontFamily="@font/poppins_regular"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:layout_marginVertical="23dp"/>
        <LinearLayout
            android:id="@+id/myOrder_nav"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="26dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/myOrder_title">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/myOrder_onGoing"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/myOrder_onGoing_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="On going"
                    android:textSize="14sp"
                    android:textColor="#001833"
                    android:fontFamily="@font/poppins_regular"
                    android:textStyle="bold"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <Button
                    android:id="@+id/myOrder_onGoing_belowText"
                    android:layout_width="93dp"
                    android:layout_height="2dp"
                    android:backgroundTint="#001833"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/myOrder_history"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/myOrder_history_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="History"
                    android:textSize="14sp"
                    android:textColor="#D8D8D8"
                    android:fontFamily="@font/poppins_regular"
                    android:textStyle="bold"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <Button
                    android:id="@+id/myOrder_history_belowText"
                    android:layout_width="93dp"
                    android:layout_height="2dp"
                    android:backgroundTint="#D8D8D8"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/myOrder_rvOnGoing"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="100dp"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/myOrder_nav"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/myOrder_rvHistory"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="100dp"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/myOrder_nav"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>