<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    tools:context=".fragments.RedeemFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="30dp">
        <RelativeLayout
            android:id="@+id/redeem_relativeLayout1"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/backButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:foreground="@drawable/ripple_effect_oval"
                android:background="@drawable/arrow_back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:text="Redeem"
                android:textSize="16sp"
                android:letterSpacing="-0.02"
                android:textColor="#001833"
                android:fontFamily="@font/poppins_regular"
                android:textStyle="bold"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/redeem_linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:orientation="horizontal"
            android:weightSum="4"
            app:layout_constraintTop_toBottomOf="@id/redeem_relativeLayout1">

            <ImageView
                android:id="@+id/redeem_imgCoffee1"
                android:layout_width="82dp"
                android:layout_height="61dp"
                android:src="@drawable/coffee_americano" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:layout_marginLeft="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cafe Latte"
                    android:textColor="#324A59"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textStyle="bold"
                    android:layout_alignParentTop="true"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Valid until 04.09.23"
                    android:textSize="10sp"
                    android:textColor="#98A4AC"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>

            <Button
                android:id="@+id/redeem_button1"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="1340 pts"
                android:textSize="10sp"
                android:fontFamily="@font/poppins_regular"
                android:backgroundTint="#324A59"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/redeem_linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:orientation="horizontal"
            android:weightSum="4"
            app:layout_constraintTop_toBottomOf="@id/redeem_linearLayout1">

            <ImageView
                android:layout_width="82dp"
                android:layout_height="61dp"
                android:src="@drawable/coffee_flatwhite" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:layout_marginLeft="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flat White"
                    android:textColor="#324A59"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textStyle="bold"
                    android:layout_alignParentTop="true"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Valid until 04.09.23"
                    android:textSize="10sp"
                    android:textColor="#98A4AC"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>

            <Button
                android:id="@+id/redeem_button2"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="1340 pts"
                android:textSize="10sp"
                android:fontFamily="@font/poppins_regular"
                android:backgroundTint="#324A59"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/redeem_linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:orientation="horizontal"
            android:weightSum="4"
            app:layout_constraintTop_toBottomOf="@id/redeem_linearLayout2">

            <ImageView
                android:layout_width="82dp"
                android:layout_height="61dp"
                android:src="@drawable/coffee_cappuccino" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:layout_marginLeft="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cappuccino"
                    android:textColor="#324A59"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textStyle="bold"
                    android:layout_alignParentTop="true"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Valid until 04.09.23"
                    android:textSize="10sp"
                    android:textColor="#98A4AC"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>

            <Button
                android:id="@+id/redeem_button3"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="1340 pts"
                android:textSize="10sp"
                android:fontFamily="@font/poppins_regular"
                android:backgroundTint="#324A59"
                />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>